<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold my-6">Books</h1>

  <%= link_to "New Book", new_book_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>

  <table class="min-w-full bg-white border border-gray-200 mt-6">
    <thead>
      <tr class="bg-gray-100">
        <th class="py-2 px-4 border-b">Title</th>
        <th class="py-2 px-4 border-b">Author</th>
        <th class="py-2 px-4 border-b">Published Year</th>
        <th class="py-2 px-4 border-b">Status</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 border-b"><%= book.title %></td>
          <td class="py-2 px-4 border-b"><%= book.author %></td>
          <td class="py-2 px-4 border-b"><%= book.published_year %></td>
          <td class="py-2 px-4 border-b">
            <span class="px-2 py-1 text-sm rounded-full <%= book.status == 'available' ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
              <%= book.status %>
            </span>
          </td>
          <td class="py-2 px-4 border-b">
            <%= link_to "Show", book, class: "text-blue-500 hover:text-blue-700" %>
            <%= link_to "Edit", edit_book_path(book), class: "text-yellow-500 hover:text-yellow-700 ml-2" %>
            <%= link_to "Delete", book, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 ml-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>